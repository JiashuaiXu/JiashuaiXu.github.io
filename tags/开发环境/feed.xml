&lt;/span&gt;&lt;/span&gt;&lt;span style=&#34;display:flex;&#34;&gt;&lt;span&gt;  outputs &lt;span style=&#34;color:#ff79c6&#34;&gt;=&lt;/span&gt; { self&lt;span style=&#34;color:#ff79c6&#34;&gt;,&lt;/span&gt; nixpkgs }: {
&lt;/span&gt;&lt;/span&gt;&lt;span style=&#34;display:flex;&#34;&gt;&lt;span&gt;    devShells&lt;span style=&#34;color:#ff79c6&#34;&gt;.&lt;/span&gt;default &lt;span style=&#34;color:#ff79c6&#34;&gt;=&lt;/span&gt; pkgs&lt;span style=&#34;color:#ff79c6&#34;&gt;.&lt;/span&gt;mkShell {
&lt;/span&gt;&lt;/span&gt;&lt;span style=&#34;display:flex;&#34;&gt;&lt;span&gt;      buildInputs &lt;span style=&#34;color:#ff79c6&#34;&gt;=&lt;/span&gt; [ pkgs&lt;span style=&#34;color:#ff79c6&#34;&gt;.&lt;/span&gt;hugo pkgs&lt;span style=&#34;color:#ff79c6&#34;&gt;.&lt;/span&gt;git ];
&lt;/span&gt;&lt;/span&gt;&lt;span style=&#34;display:flex;&#34;&gt;&lt;span&gt;    };
&lt;/span&gt;&lt;/span&gt;&lt;span style=&#34;display:flex;&#34;&gt;&lt;span&gt;  };
